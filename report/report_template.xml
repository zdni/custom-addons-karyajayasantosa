<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="marketing_agent_report_temp">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h4>Laporan Penjualan SPG</h4>
                        </b>
                    </center>
                    <center>
                        <b>
                            <span t-esc="start_date"/>
                            samoai
                            <span t-esc="end_date"/>
                        </b>
                    </center>
                </div>
                <br/>
                <t t-foreach="data.keys()" t-as="user">
                    <center>
                        <b>
                            <span>Sale Person: </span>
                            <span t-esc="user"/>
                        </b>
                    </center>
                    <t t-set="total" t-value="0"/>
                    <table class="table table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>POS Order</th>
                                <th>Tanggal</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="data[user]" t-as="order">
                                <td><span t-esc="order[0]" /></td>
                                <td><span t-esc="order[1]" /></td>
                                <td class="text-right">
                                    <span t-esc="'{:,}'.format(order[2])"/>
                                    <t t-set="total" t-value="total + order[2]"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr>
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-esc="'{:,}'.format(total)"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>