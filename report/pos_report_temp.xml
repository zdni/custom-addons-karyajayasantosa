<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pos_report_temp">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h4>Laporan Profit Session</h4>
                        </b>
                    </center>
                    <center>
                        <b>
                            <span t-esc="start_date"/>
                            To
                            <span t-esc="end_date"/>
                        </b>
                    </center>
                </div>
                <br/>
                <t t-set="total_amount" t-value="0"/>
                <t t-set="total_hpp" t-value="0"/>
                <t t-set="total_margin" t-value="0"/>
                <t t-foreach="data" t-as="session">
                    <t t-set="total_trans" t-value="0"/>
                    <h4 style="color: #05A9EE;"><b>Session: <span t-esc="session[0]"/></b></h4>
                    <table class="table table-condensed table-striped">
                        <thead>
                            <th>Kasir</th>
                            <th>Tanggal Session</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-esc="session[1]"/>
                                </td>
                                <td>
                                    <span t-esc="session[2]"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-xs-12">
                            <p style="color: #05A9EE;"><b>Rekap</b></p>
                            <table class="table table-condensed table-striped" style="page-break-after: always;">
                                <t t-foreach="session[6].keys()" t-as="journal_name">
                                    <tr>
                                        <td>
                                            <span t-esc="journal_name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="'{:,.2f}'.format(session[6][journal_name])"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr><td></td><td></td></tr>
                                <tr>
                                    <td><b>Total Transaksi</b></td>
                                    <td class="text-right">
                                        <t t-set="total_amount" t-value="total_amount + session[7]"/>
                                        <span t-esc="'{:,.2f}'.format(session[7])"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>HPP</b></td>
                                    <td class="text-right">
                                        <t t-set="total_hpp" t-value="total_hpp + session[3]"/>
                                        <span t-esc="'{:,.2f}'.format(session[3])"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>Margin</b></td>
                                    <td class="text-right">
                                        <t t-set="total_margin" t-value="total_margin + (session[7]-session[3])"/>
                                        <span t-esc="'{:,.2f}'.format(session[7] - session[3])"/>
                                    </td>
                                </tr>
                            </table>

                            <t t-if="session[5] == 'detail'">
                                <t t-foreach="session[4]" t-as="transaction">
                                    <p>Transaksi: <span t-esc="transaction[0]"/></p>
                                    <table class="table table-condensed table-striped">
                                        <thead>
                                            <th>Produk</th>
                                            <th>Uom</th>
                                            <th>Qty</th>
                                            <th class="text-right">Diskon</th>
                                            <th class="text-right">Subtotal</th>
                                            <th class="text-right">HPP</th>
                                            <th class="text-right">Margin</th>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="transaction[1]" t-as="line">
                                                <tr>
                                                    <td>
                                                        <span t-esc="line[0]"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="line[1]"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="line[2]"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="line[3]"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="'{:,.2f}'.format(line[4])"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="'{:,.2f}'.format(line[5])"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="'{:,.2f}'.format(line[4]-line[5])"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr>
                                                <td colspan="3"></td>
                                                <td class="text-right"><b>Total</b></td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,.2f}'.format(transaction[2])"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,.2f}'.format(transaction[3])"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,.2f}'.format(transaction[4])"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                            </t>
                        </div>
                    </div>
                </t>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed" style="page-break-after: always;">
                            <tr>
                                <td><strong>Total Transaksi</strong></td>
                                <td class="text-right">
                                    <span t-esc="'{:,.2f}'.format(total_amount)"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Total HPP</strong></td>
                                <td class="text-right">
                                    <span t-esc="'{:,.2f}'.format(total_hpp)"/>
                                </td>
                            </tr>
                            <tr class="border-dark">
                                <td><strong>Total Margin</strong></td>
                                <td class="text-right">
                                    <span t-esc="'{:,.2f}'.format(total_margin)"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>