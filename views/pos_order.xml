<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="view_pos_order_retail_form_inherit" model="ir.ui.view">
            <field name="name">pos.order.form.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="pos_reference" position="after">
                    <field name="has_discount" attrs="{'invisible': True}" />
                    <field name="discount_description" attrs="{'invisible': [('has_discount', '=', False)]}"/>
                    <field name="percent_discount" attrs="{'invisible': [('has_discount', '=', False)]}"/>
                    <field name="total_discount" attrs="{'invisible': [('has_discount', '=', False)]}"/>
                </field>
                <field name="pos_reference" position="after">
                    <group name="pos_voucher_description" string="Voucher" attrs="{'invisible': [('name_voucher', '=', '')]}">
                        <field name="name_voucher" />
                        <field name="code_voucher" />
                        <field name="amount_voucher" />
                    </group>
                </field>
                <xpath expr="//field[@name='lines']/tree/field[@name='price_subtotal_incl']" position="after">
                    <field name="promotion" invisible="1"/>
                    <field name="promotion_reason"/>
                </xpath>
            </field>
        </record>
    
    </data>
</odoo>
