<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pos_voucher_form" model="ir.ui.view">
            <field name="name">pos.voucher.form</field>
            <field name="model">pos.voucher</field>
            <field name="arch" type="xml">
                <form string="Voucher">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <!-- <field name="pos_order_id" readonly="1"/> -->
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="minimum_purchase"/>
                                <field name="expiry_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pos_voucher_tree" model="ir.ui.view">
            <field name="name">pos.voucher.tree</field>
            <field name="model">pos.voucher</field>
            <field name="arch" type="xml">
                <tree string="Vouchers">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="amount"/>
                    <field name="minimum_purchase"/>
                    <field name="expiry_date"/>
                </tree>
            </field>
        </record>

        <record id="pos_voucher_search" model="ir.ui.view">
            <field name="name">pos.voucher.filter</field>
            <field name="model">pos.voucher</field>
            <field name="arch" type="xml">
                <search string="Voucher Search">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="expiry_date"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_pos_voucher">
            <field name="name">Vouchers</field>
            <field name="res_model">pos.voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_action_pos_voucher"
                  parent="menu_retail"
                  action="action_pos_voucher"
        />
    
    </data>
</odoo>
