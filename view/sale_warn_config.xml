<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="sale_warn_config_view_tree" model="ir.ui.view">
            <field name="name">sale.warn.config.view.tree</field>
            <field name="model">sale.warn.config</field>
            <field name="arch" type="xml">
                <tree string="Configuration User Group Sale Manager" editable="top">
                    <field name="user_id" />
                </tree>
            </field>
        </record>        
    
        <record id='sale_warn_configuration_action' model='ir.actions.act_window'>
            <field name="name">Sale Warn Configuration</field>
            <field name="res_model">sale.warn.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            action="sale_warn_configuration_action"
            id="sale_warn_configuration"
            parent="sales_team.menu_sale_config"
            sequence="100"
            name="Sale Warn Configuration"
            groups="hr.group_hr_manager"
        />

    </data>
</odoo>
