<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_report_product_consigment" model="ir.ui.view">
            <field name="name">report.product.consigment.form.view</field>
            <field name="model">report.product.consigment</field>
            <field name="arch" type="xml">
                <form string="Laporan Produk Konsinyasi">

                    <group>
                        <group>
                            <field name="start_date" attr="{'required': True}"/>
                        </group>
                        <group>
                            <field name="end_date" attr="{'required': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="brand_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                    </group>
                    <group>
                        <field name="vendor_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}" domain="[('supplier', '=', True)]" />
                    </group>

                    <footer>
                        <button name="print_report" string="Print Report" class="oe_highlight" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>


            </field>
        </record>

        <record id="action_report_product_consigment_age" model="ir.actions.act_window">
            <field name="name">Laporan Produk Konsinyasi</field>
            <field name="res_model">report.product.consigment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_wizard_report_product_consigment"
                  name="Laporan Produk Konsinyasi"
                  action="action_report_product_consigment_age"
                  parent="sales_team.menu_sale_report"
                  sequence="2"/>
    </data>
</odoo>

