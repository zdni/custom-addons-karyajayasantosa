<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="product_template_form_view_inherit_product_brand" model="ir.ui.view">
            <field name="name">product.template.view.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="brand_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'required' : [('type', '=', 'product')]}"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_tree_view_inherit_product" model="ir.ui.view">
            <field name="name">product.template.view.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="replace">
                    <field name="brand_id" />
                </xpath>
            </field>
        </record>

        <record id="product_product_tree_view_inherit_product" model="ir.ui.view">
            <field name="name">product.product.view.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="replace">
                    <field name="brand_id" />
                </xpath>
            </field>
        </record>

        <record id="product_template_search_view_inherit_product" model="ir.ui.view">
            <field name="name">product.template.view.search.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="brand_id" String="Brand" filter_domain="[]" widget="selection" context="{'brand': self}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
