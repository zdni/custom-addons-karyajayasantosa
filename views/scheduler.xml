<odoo>
    <data noupdate="1">

        <record id="update_schedule_pricelist_product_cron" model="ir.cron">
            <field name="name">Update Schedule Pricelist Product</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=0)).strftime('%Y-%m-%d 16:01:00')" />
            <field name="model" eval="'schedule.pricelist.product'"/>
            <field name="function" eval="'cron_update_schedule_pricelist_product'"/>
            <field name="args" eval="'()'"/>
        </record>

    </data>
</odoo>