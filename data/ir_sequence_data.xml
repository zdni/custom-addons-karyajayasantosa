<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="seq_pos_discount_customer" model="ir.sequence">
            <field name="name">POS Discount Customer</field>
            <field name="code">pos.discount_customer</field>
            <field name="active">TRUE</field>
            <field name="prefix">DiscCustomer </field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <record id="product_category_retail" model="product.category">
            <field name="name">Retail</field>
        </record>

        <record id="promotion_service_01" model="product.product">
            <field name="name">Promotion service</field>
            <field name="standard_price">0</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="available_in_pos">True</field>
            <field name="categ_id" ref="product_category_retail"/>
            <field name="uom_id" ref="product.product_uom_unit"/>
            <field name="uom_po_id" ref="product.product_uom_unit"/>
            <field name="description">PS</field>
            <field name="default_code">PS</field>
            <field name="taxes_id">[]</field>
        </record>

    </data>
</odoo>
