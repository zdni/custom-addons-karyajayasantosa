<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="schedule_pricelist_product_view_form" model="ir.ui.view">
        <field name="name">schedule.pricelist.product.view.form</field>
        <field name="model">schedule.pricelist.product</field>
        <field name="arch" type="xml">
            <form string="Schedule Pricelist Product">
                <header>
                    <button string="Run Document" name="action_run_document" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="start_date" />
                        </group>
                        <group>
                            <field name="end_date" />
                        </group>
                    </group>
                    <notebook>
                        <page name="product" string="Product">
                            <field name="line_ids" mode="tree,kanban">
                                <form string="Schedule Pricelist Product Lines">
                                    <group>
                                        <field name="product_id" />
                                        <field name="uom_id" />
                                    </group>
                                    <group>
                                        <field name="purchase_price" />
                                        <field name="selling_price" />
                                    </group>                 
                                </form>
                                <tree string="Schedule Pricelist Product Lines">
                                    <field name="product_id" />
                                    <field name="uom_id" />
                                    <field name="purchase_price" />
                                    <field name="selling_price" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="schedule_pricelist_product_view_tree" model="ir.ui.view">
        <field name="name">schedule.pricelist.product.view.tree</field>
        <field name="model">schedule.pricelist.product</field>
        <field name="arch" type="xml">
            <tree string="Schedule Pricelist Product">
                <field name="name" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="action_schedule_pricelist_product" model="ir.actions.act_window">
        <field name="name">Schedule Pricelist Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">schedule.pricelist.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="menu_schedule_pricelist_product" 
        name="Schedule Pricelist Product" 
        parent="sale.menu_product_pricelist_main" 
        action="action_schedule_pricelist_product" 
        groups="product.group_sale_pricelist"
    />

</odoo>
