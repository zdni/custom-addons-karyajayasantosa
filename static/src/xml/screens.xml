<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MarketingAgentButton">
        <span class="control-button marketing-agent-button" id="marketing-agent-button">
            <i class="fa fa-user" />
            <span id="agent_name">
                Agent
            </span>
        </span>
    </t>

    <t t-name="AgentLine">
        <tr class='agent-line' t-att-data-id='agent.id'>
            <td><t t-esc='agent.name' /></td>
        </tr>
    </t>

    <t t-name="MarketingAgentListScreenWidget">
        <div class="marketingagentlist-screen screen">
            <div class="screen-content">
                <section class="top-content">
                    <span class='button back'>
                        <i class='fa fa-angle-double-left'></i>
                        Cancel
                    </span>
                    <span class='searchbox'>
                        <input placeholder='Search Agent' />
                        <span class='search-clear'></span>
                    </span>
                    <span class='searchbox'></span>
                    <span class='button next oe_hidden highlight'>
                        Select Agent
                        <i class='fa fa-angle-double-right'></i>
                    </span>
                </section>
                <section class="full-content">
                    <div class='window'>
                        <section class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix touch-scrollable scrollable-y'>
                                    <table class='marketingagent-list'>
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                            </tr>
                                        </thead>
                                        <tbody class='marketingagent-list-contents'>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>

</templates>