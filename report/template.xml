<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="omset_margin_temp">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h4>Laporan Omset dan Margin Salesperson</h4>
                        </b>
                    </center>
                    <center>
                        <b>
                            <span t-esc="start_date"/>
                            To
                            <span t-esc="end_date"/>
                        </b>
                    </center>
                </div>
                <br/>
                <t t-foreach="data.keys()" t-as="user">
                    <center>
                        <b>
                            <span>Sale Person :</span>
                            <span t-esc="user"/>
                        </b>
                    </center>
                    
                    <t t-set="total_sum" t-value="0"/>
                    <t t-set="total_hpp" t-value="0"/>
                    <t t-set="total_margin" t-value="0"/>
                    <table class="table table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>Pelanggan</th>
                                <th width="20%">Area</th>
                                <th class="text-center">Nomor SO</th>
                                <th class="text-center">Tanggal Invoice</th>
                                <th class="text-center">Tanggal Pelunasan</th>
                                <th class="text-center">Umur Nota</th>
                                <th class="text-right">Total Transaksi</th>
                                <t t-if="visible == True">
                                    <th class="text-right">HPP</th>
                                    <th class="text-right">Margin</th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="data[user]" t-as="order">
                                <td>
                                    <span t-esc="order[0]"/>
                                </td>
                                <td width="20%" class="text-center">
                                    <span t-esc="order[1]"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="order[2]"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="order[3]"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="order[4]"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="order[5]"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'{:,}'.format(order[6])"/>
                                    <t t-set="total_sum" t-value="total_sum + order[6]"/>
                                </td>
                                <t t-if="visible == True">
                                    <td class="text-right">
                                        <span t-esc="'{:,}'.format(order[8])"/>
                                        <t t-set="total_hpp" t-value="total_hpp + order[8]"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{:,}'.format(order[7])"/>
                                        <t t-set="total_margin" t-value="total_margin + order[7]"/>
                                    </td>
                                </t>
                            </tr>            
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr>
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-esc="'{:,}'.format(total_sum)"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Total HPP</strong></td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.2f}'.format(total_hpp)"/>
                                    </td>
                                </tr>
                                <tr class="border-dark">
                                    <td><strong>Total Margin</strong></td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.2f}'.format(total_margin)"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>