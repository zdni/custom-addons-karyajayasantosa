<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="member_card">
            <div style="width: 394px; height: 249px; background-image: url('/member_card/static/images/new-front.png'); background-position: center; background-repeat: no-repeat; background-size: 100% 100%; position: relative; margin-bottom: 10px;">
                <div style="position: relative; top: 200px; left: 210px; display: inline-block;">
                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', partner.card_number_lyt, 600, 150)" style="height:35px;"/>
                </div>
                <div style="position: relative; top: 190px; left: 10px;">
                    <strong t-field="partner.name" style="color: white; font-size: 8px;"/>
                </div>
            </div>
            <div style="width: 394px; height: 249px; background-image: url('/member_card/static/images/new-back.png'); background-position: center; background-repeat: no-repeat; background-size: 100% 100%; margin-bottom: 20px;"/>
        </template>

        <template id="report_member_card">
            <div class="page">
                <t t-foreach="docs" t-as="partner">
                    <t t-call="member_card.member_card">
                        <t t-set="partner" t-value="partner"/>
                    </t>
                </t>
            </div>
        </template>

        <report 
            id="action_report_member_card"
            string="Member Card"
            model="res.partner"
            report_type="qweb-pdf"
            name="member_card.report_member_card"
            file="member_card.report_member_card"
        />

    </data>
</odoo>