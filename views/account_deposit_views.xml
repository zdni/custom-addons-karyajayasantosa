<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_deposit_line_view_tree" model="ir.ui.view">
            <field name="name">account.deposit.line.view.tree</field>
            <field name="model">account.deposit.line</field>
            <field name="arch" type="xml">
                <tree string="Deposit Customer">
                    <field name="order_id" attrs="{'readonly': True}" />
                    <field name="partner_id" attrs="{'readonly': True}" />
                    <field name="date" attrs="{'readonly': True}" />
                    <field name="debit" attrs="{'readonly': True}" />
                    <field name="credit" attrs="{'readonly': True}" />
                </tree>
            </field>
        </record>

        <record id="account_deposit_line_view_form" model="ir.ui.view">
            <field name="name">account.deposit.line.view.form</field>
            <field name="model">account.deposit.line</field>
            <field name="arch" type="xml">
                <form string="Deposit Customer">
                    <sheet>
                        <group>
                            <group>
                                <field name="order_id" attrs="{'readonly': True}" />
                                <field name="partner_id" attrs="{'readonly': True}" />
                                <field name="date" attrs="{'readonly': True}" />
                            </group>
                            <group>
                                <field name="debit" attrs="{'readonly': True}" />
                                <field name="credit" attrs="{'readonly': True}" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_deposit_line_view_search" model="ir.ui.view">
            <field name="name">account.deposit.line.view.search</field>
            <field name="model">account.deposit.line</field>
            <field name="arch" type="xml">
                <search string="Search Deposit Customer">
                    <group string="Group By">
                        <filter name="customer" string="Customer" context="{'group_by': 'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="act_res_partner_2_deposit" model="ir.actions.act_window">
            <field name="name">Deposit Customer</field>
            <field name="res_model">account.deposit.line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="account_deposit_line_view_tree"/>
            <field name="domain">[('partner_id', '=', active_id)]</field>
            <field name="context">{'search_default_partner_id': active_id}</field>
        </record>

        <record model="ir.actions.act_window.view" id="action_account_deposit_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_deposit_line_view_tree"/>
            <field name="act_window_id" ref="act_res_partner_2_deposit"/>
        </record>
    
        <!-- <menuitem
            id="account_deposit_line_menu"
            name="Deposit Customer"
            action="action_account_deposit_tree"
            parent="point_of_sale.menu_point_of_sale"
            sequence="10"/> -->
            
    </data>
</odoo>
