<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_details_wizard_inherit_point_of_sale" model="ir.ui.view">
        <field name="name">pos.details.wizard.view.form.inherit</field>
        <field name="model">pos.details.wizard</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_details_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='generate_report']" position="after">
                Or
                <button name="print_pos_details_report_xlsx" string="Print Excel" class="oe_highlight" type="object"/>
                Or
            </xpath>
        </field>
    </record>

    <report
      id="action_pos_details_report_xlsx"
      model="pos.details.wizard"
      string="POS Details Report XLSX"
      report_type="xlsx"
      name="pos_details_report_xlsx"
      file="pos_details_report_xlsx"
    />

</odoo>
